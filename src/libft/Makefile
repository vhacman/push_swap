# **************************************************************************** #
#                                VARIABLES                                     #
# **************************************************************************** #

NAME        = libft.a
CC          = gcc
CFLAGS      = -Wall -Wextra -Werror
AR          = ar rcs
RM          = rm -f
MAKEFLAGS	+= -s

SRC_DIR     = src
OBJ_DIR     = obj

SRCS        = $(wildcard $(SRC_DIR)/*.c)
OBJS        = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRCS))

# **************************************************************************** #
#                                  RULES                                       #
# **************************************************************************** #

all: $(NAME)
	@echo "โจ ๐๐ฒ๐ซ๐ฏ๐ฝ ๐ฌ๐ธ๐ท๐ณ๐พ๐ป๐ฎ๐ญ! โจ"

$(NAME): $(OBJS)
	@$(AR) $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -Iincludes -c $< -o $@

clean:
	@$(RM) -rf $(OBJ_DIR)
	@echo "๐งน ๐ฃ๐ฑ๐ฎ ๐ฏ๐ธ๐ป๐ฐ๐ฎ ๐ฒ๐ผ ๐ฌ๐ต๐ฎ๐ช๐ท."

fclean: clean
	@$(RM) $(NAME)
	@echo "๐ ๐๐ฒ๐ซ๐ฏ๐ฝ ๐ผ๐ช๐ฌ๐ป๐ฒ๐ฏ๐ฒ๐ฌ๐ฎ๐ญ: ๐ฏ๐ฌ๐ต๐ฎ๐ช๐ท ๐ฌ๐ธ๐ถ๐น๐ต๐ฎ๐ฝ๐ฎ."

re: fclean all
	@echo "๐ ๐๐ฒ๐ซ๐ฏ๐ฝ ๐ป๐ฎ๐ซ๐ธ๐ป๐ท ๐ฏ๐ป๐ธ๐ถ ๐ฝ๐ฑ๐ฎ ๐ช๐ผ๐ฑ๐ฎ๐ผ..."


.PHONY: all clean fclean re
